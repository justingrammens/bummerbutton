<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:textColor="#000"
    android:padding="10dip"
    >
    
    <TextView
	android:id="@+id/created_for"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:gravity="center_horizontal|center_vertical"
    android:text="Based on the &quot;Instant Fail&quot; website by..."
    android:textColor="#000"
    android:padding="5dip"
    />    
    
	<ImageView
	android:id="@+id/pacdude_img"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:src="@drawable/pacdude"
	android:gravity="center_horizontal|center_vertical"
	android:padding="5dip"
    />

	<TextView
	android:id="@+id/localtone_txt"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:gravity="center_horizontal|center_vertical"
    android:text="Developed by..."
    android:textColor="#000"
    android:padding="5dip"
    />
    
    <ImageView
	android:id="@+id/localtone_img"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:src="@drawable/localtone"
	android:gravity="center_horizontal|center_vertical"
	android:padding="5dip"
    />
    
    
</LinearLayout>